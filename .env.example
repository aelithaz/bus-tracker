# Local MongoDB (optional)
MONGO_URI=mongodb://127.0.0.1:27017/bus-tracker

# MTD API key (required for poller)
MTD_API_KEY=your_mtd_api_key_here

# FCM service account: either point to a json file path or paste JSON
# FCM_SERVICE_ACCOUNT_PATH=./fcm-service-account.json
# or
# FCM_SERVICE_ACCOUNT={...json...}

# Poller interval and notify window
POLL_INTERVAL_MS=60000
NOTIFY_WINDOW_MINUTES=5

# Example test variables for scripts
TEST_EMAIL=tester@example.com
TEST_FCM_TOKEN=fake-token-for-dev
TEST_STOP=it:1
TEST_TRIP=example-trip-id
TEST_NOTIFY_MINUTES=5

# App port
PORT=3000
